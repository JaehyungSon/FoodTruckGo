<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/leftmenu_profile_bg">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:padding="10dp"
            android:src="@drawable/profile_null" />

        <LinearLayout
            android:id="@+id/profile_context"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="19dp"
            android:paddingTop="10dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"/>

            <TextView
                android:id="@+id/profile_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="NULL"/>

            <TextView
                android:id="@+id/profile_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="75dp">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="즐겨찾기"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="75dp">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_point"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="적립하기"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="75dp">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_notification"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="알림"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp">


    </RelativeLayout>


</LinearLayout>
