<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/leftmenu_profile_bg"
        android:layout_marginBottom="-3dp">

        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="left"
            android:padding="10dp"
            android:src="@drawable/profile_null" />

        <LinearLayout
            android:id="@+id/profile_context"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="19dp"
            android:paddingTop="10dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"/>

            <TextView
                android:id="@+id/profile_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="NULL"/>

            <TextView
                android:id="@+id/profile_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NULL"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_01"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="-3dp"
        android:layout_below="@+id/profile_layout">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_favorite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="즐겨찾기"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_02"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="-3dp"
        android:layout_below="@+id/menu_01">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_point"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="적립하기"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_03"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="-3dp"
        android:layout_below="@+id/menu_02">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_notification"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="알림"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/menu_05"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="-3dp"
        android:layout_above="@+id/menu_04">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_regi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="등록/수정"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_04"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/leftmenu_menu_bg"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/leftmenu_menu_plus"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="로그 아웃"
                android:textSize="18dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"/>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>


