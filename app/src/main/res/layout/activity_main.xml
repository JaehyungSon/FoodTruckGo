<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lkm.ms_termproject_001.MainActivity">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <FrameLayout
            android:id="@+id/top_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageView
                android:id="@+id/main_top_bg"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:src="@drawable/main_top_bg">
            </ImageView>
            <ImageButton
                android:id="@+id/main_top_menu_left_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/main_top_menu_left_btn"
                android:layout_margin="9dp"
                android:onClick="topMenuClick"
                android:layout_gravity="left">
            </ImageButton>

            <ImageButton
                android:id="@+id/main_top_menu_filter_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/main_top_menu_filter_btn"
                android:layout_margin="9dp"
                android:onClick="topMenuClick"
                android:layout_gravity="right">
            </ImageButton>
        </FrameLayout>

        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ViewFlipper>

            <ToggleButton android:id="@+id/toggle_auto"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:textColor="#00ff0000"
                android:background="#00ff0000"/>

            <Button android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:onClick="mOnClick"
                android:background="#00ff0000"/>

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:background="#00ff0000"
                android:onClick="mOnClick"/>
        </FrameLayout>

        <Button
            android:onClick="testClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="테스트 버튼"/>

    </LinearLayout>

</LinearLayout>
